<Window x:Class="ApiCallApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiCallApp"
          mc:Ignorable="d" FontSize="22" Loaded="Window_Loaded" 
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Padding="0,0,0,10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="previousImageButton" Padding="15" Margin="15" Click="previousImageButton_Click">Previous</Button>
            <Button x:Name="sunInformationButton" Padding="15" Margin="15" Click="sunInformationButton_Click">Sun Information</Button>
            <Button x:Name="nextImageButton" Padding="15" Margin="15" Click="nextImageButton_Click" IsEnabled="false">Next</Button>
        </StackPanel>

        <Image Grid.Row="1" x:Name="comicImage" Margin="10"/>
        
    </Grid>
</Window>
